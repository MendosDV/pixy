{
  "manifest_version": 2,
  "name": "Pixy",
  "version": "1.0",
  "description": "Pixy protège vos enfants du contenu inaproprié présent sur le web ",
  "icons": {
    "128": "icons128.png"
  },

  "browser_action": {
    "default_icon": {
      "128": "icons128.png"
    },
    "default_title": "Pixy",
    "default_popup": "popup.html"
  },

  "permissions": [
    "tabs"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content.js"]
    }
  ]
}
